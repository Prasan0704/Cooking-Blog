<!-- Categories Start-->

<div class="row row-cols-1 row-cols-lg-6 g-2 g-lg-3 py-4">
    <% if(categories != '') {%>
    <% categories.forEach(function(category,index){%>
    <a href="/categories/<%- category.name %>" class="col text-center category__link">
        <div class="category__img shadow">
            <img src="image/<%- category.image %>" alt="<%- category.name %>" Loading="lazy">
        </div>
        <div class="pt-1"><%- category.name %></div>
    </a>
    <% }) %> 
    <% } %>
    <a href="/categories" class="col text-center category__link">
        <div class="category__img shadow">
            <img src="image/view-all.jpg" alt="View All Categories" Loading="lazy">
        </div>
        <div class="pt-1">View All Categories</div>
    </a>
 
  
</div>

<!-- Categories end  -->



<!-- Latest Start -->

<section class="pb-4 pt-4">
    <div class="d-flex mb-2 align-items-center">
        <h2>Latest Recipie</h2>
        <a href="/explore-latest" class="ms-auto">View More</a>
    </div>




    <div class="row row-cols-2 row-cols-lg-5 g-2 g-lg-3">
        
        <% if(food != '') { %>
           <% food.latest.forEach(function(recipie, index){ %>
            <a href="/recipie/<%= recipie._id %>" class="col text-centre category__link"> 
                <div class="category__img--large shadow">
                    <img src="/uploads/<%= recipie.image %>" alt="<%= recipie.name %>" 
                    class="category__img--large"
                    style="width:100%" Loading="lazy">
                </div>
            <div class="pt-4"><%= recipie.name %></div>
            </a>
            <% }) %>
        <% } %>

    </div>
</section>

<!-- Latest End -->



