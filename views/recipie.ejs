<% if (recipie !=null ) { %>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item active" aria-current="page"><%- recipie.name %></li>
        </ol>
    </nav>
    
    <div class="row">
        <div class="col-12 col-md-4">
            <img src="/uploads/<%- recipie.image%>" class="img-fluid sticky-top" style="top: 20px;" alt="<%- recipie.name %>" loading="lazy">
        </div> 
        
        <div class="col-12 col-md-8">
            <div class="col-12"><h1><%- recipie.name %></h1></div>
            <div class="col-12 mb-4"><i class="bi bi-tag"></i> <%- recipie.category %></div>
            <div class="col-12" style="white-space: pre-line;">
                <h4>Cooking Instrcution</h4>
                <%- recipie.description %> 
            </div>

            <div class="row pt-4">
                <div class="col-12">
                    <h4>Ingredients</h4>
                    <ul id="ingredients-list" class="list-group list-group-flush">
                        <% recipie.ingredients.forEach(function(ingredients,index){%>
                            <li class="list-group-item"><%= ingredients %></li>
                        <% }) %>
                    </ul>
                </div>
            </div>
            <div class="row pt-4">
                <div class="col-12">
                    <form action="/recipie/<%= recipie.id %>" method="get">
                        <label class="row pt-8" for="servings">Number of Servings:</label>
                        <input type="number" id="servings" name="num" min="0" max="20" />
                        <button type="submit">Get Recipe</button>
                      </form>
                   
                    <div id="recipe"></div>
                </div>
            </div>
    
        </div>
    </div> 
<% } else { %>
    <p>No item found.</p>
<% } %>